<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="10000dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/exit_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorWhite"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:contentDescription="@string/img"
                    android:src="@mipmap/icon_close"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="0.5">

                    <ImageView
                        android:id="@+id/product_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/img"
                        android:src="@drawable/fruit"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/details_money"
                        android:textColor="@color/colorPink"
                        android:textSize="@dimen/text_size_x"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:text="@string/details_stock"
                            android:textSize="@dimen/text_size_x"/>

                        <TextView
                            android:id="@+id/inventory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/details_inventory"
                            android:textColor="@color/colorOrder"
                            android:textSize="@dimen/text_size_x"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/details_unit"
                            android:textSize="@dimen/text_size_x"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorLogisicsLine"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/details_weight"
                    android:textColor="@color/colorOrder"
                    android:textSize="@dimen/text_size_x"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/weight_menu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/weight_toast"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/details_weight_num"
                        android:textColor="@color/colorOrder"
                        android:textSize="@dimen/text_size_x"/>

                    <TextView
                        android:id="@+id/weight_menu1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/weight_toast"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/details_weight_num"
                        android:textColor="@color/colorOrder"
                        android:textSize="@dimen/text_size_x"/>

                    <TextView
                        android:id="@+id/weight_menu2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/weight_toast"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/details_weight_num"
                        android:textColor="@color/colorOrder"
                        android:textSize="@dimen/text_size_x"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/weight_menu3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/weight_toast"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/details_weight_num"
                        android:textColor="@color/colorOrder"
                        android:textSize="@dimen/text_size_x"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/weight_menu4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/weight_toast"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/details_weight_num"
                        android:textColor="@color/colorOrder"
                        android:textSize="@dimen/text_size_x"
                        android:visibility="invisible"/>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorLogisicsLine"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/details_tastes"
                    android:textColor="@color/colorOrder"
                    android:textSize="@dimen/text_size_x"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/taste_menu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/weight_toast"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/details_spicy"
                        android:textColor="@color/colorOrder"
                        android:textSize="@dimen/text_size_x"/>

                    <TextView
                        android:id="@+id/taste_menu1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/weight_toast"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/details_spicy"
                        android:textColor="@color/colorOrder"
                        android:textSize="@dimen/text_size_x"/>

                    <TextView
                        android:id="@+id/taste_menu2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/weight_toast"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/details_spicy"
                        android:textColor="@color/colorOrder"
                        android:textSize="@dimen/text_size_x"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/taste_menu3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/weight_toast"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/details_spicy"
                        android:textColor="@color/colorOrder"
                        android:textSize="@dimen/text_size_x"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/taste_menu4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/weight_toast"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/details_spicy"
                        android:textColor="@color/colorOrder"
                        android:textSize="@dimen/text_size_x"/>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorLogisicsLine"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/cart_num"
                    android:textColor="@color/colorOrder"
                    android:textSize="@dimen/text_size_x"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/num_less"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:background="@drawable/add_left"
                        android:gravity="center"
                        android:text="@string/cart_Less"
                        android:textSize="@dimen/text_size_x"/>

                    <TextView
                        android:id="@+id/num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="1dp"
                        android:layout_weight="1"
                        android:background="@color/colornum"
                        android:gravity="center"
                        android:text="@string/details_Num"
                        android:textSize="@dimen/text_size_x"/>

                    <Button
                        android:id="@+id/num_plus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="1dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/add_right"
                        android:gravity="center"
                        android:text="@string/cart_plus"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/text_size_x"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

            <Button
                android:id="@+id/determine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorPink"
                android:text="@string/edit_btn"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_x"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>