<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.specialty.administrator.specialty.Main">

    <RelativeLayout
        android:id="@+id/lay_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLine"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="1dp">

            <LinearLayout
                android:id="@+id/ll_menu_0"
                style="@style/main_tab_but_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:clickable="false"
                    android:id="@+id/tv_menu_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/home_on"
                    android:gravity="center"
                    android:text="@string/tv_home"
                    android:textColor="@color/colorChecked"
                    android:textSize="@dimen/text_size_mm"
                    android:padding="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_menu_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:clickable="false"
                    android:id="@+id/tv_menu_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/all_un"
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="@string/tv_classify"
                    android:textColor="@color/colorUnchecked"
                    android:textSize="@dimen/text_size_mm"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_menu_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:clickable="false"
                    android:id="@+id/tv_menu_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/cart_un"
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="@string/tv_cart"
                    android:textColor="@color/colorUnchecked"
                    android:textSize="@dimen/text_size_mm"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_menu_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_menu_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/me_un"
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="@string/tv_me"
                    android:clickable="false"
                    android:textColor="@color/colorUnchecked"
                    android:textSize="@dimen/text_size_mm"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/show_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_above="@+id/lay_bottom" >
    </RelativeLayout>
</RelativeLayout>
